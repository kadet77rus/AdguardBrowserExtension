.stats {
    padding: 24px 20px 9px;

    &__list {
        font-size: 13px;
    }

    &__item {
        padding: 0;
        list-style: none;
        margin: 0 0 15px;
        display: flex;
    }

    &__name {
        color: rgba(34, 34, 34, 0.58);
    }

    &__value {
        margin-left: auto;
        font-weight: 700;
    }
}
