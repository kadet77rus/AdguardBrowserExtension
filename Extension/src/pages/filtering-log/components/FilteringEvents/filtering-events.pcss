.filtering-log {
    max-width: 100%;
    height: calc(100% - 218px);
    overflow: auto;

    @media (max-width: 640px) {
        height: calc(100% - 275px);
    }

    &__inner {
        table-layout: fixed;
        border-collapse: collapse;
        width: 100%;
        min-width: 810px;

        & tbody > tr {
            &:hover {
                cursor: pointer;
                background: var(--trHover);
            }

            &.red {
                background-color: var(--red-row);

                &:hover {
                    background-color: var(--red-row-active);
                }
            }

            &.green {
                background-color: var(--green-row);

                &:hover {
                    background-color: var(--green-row-active);
                }
            }

            &.yellow {
                background-color: var(--orange-row);

                &:hover {
                    background-color: var(--orange-row-active);
                }
            }
        }

        & th {
            text-align: left;
            padding: 7px 25px;
            font-weight: normal;
            font-size: 14px;
            color: var(--darkText);
            border-right: 1px solid var(--thColor);
            border-bottom: 1px solid var(--thColor);
            font-family: var(--font-roboto);

            &:first-child {
                width: 25%;
            }
        }

        & td {
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
            padding: 8px 25px;
            border-top: 1px solid var(--borderColor);
            border-left: 1px solid var(--borderColor);
            color: var(--textColor);
            font-size: 12px;

            &:first-child {
                color: var(--darkText);
                border-left: none;
            }
        }
    }

    &__empty {
        height: calc(100% - 53px);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    &__empty-in {
        width: 182px;
    }

    &__empty-img {
        width: 48px;
        height: 48px;
        margin: 0 auto 18px;
        background-size: cover;
        background-image: svg-load("magnifying.svg");
    }

    &__desc {
        text-align: center;
        font-size: 12px;
        line-height: 18px;
    }

    &__refresh {
        display: inline;
        background: transparent;
        border: 0;
        padding: 0;
        color: var(--green400);
    }
}

.third-party {
    &__label {
        font-family: var(--font-roboto);
        color: var(--gray400);
        font-size: 14px;
    }

    &__icon {
        margin: -3px 4px -5px 8px;
    }
}
