.miscellaneous-filters {
    margin-left: auto;
    display: flex;
    position: relative;

    &__section {
        padding: 20px;
    }

    &__filters {
        display: none;
        width: 160px;
        position: absolute;
        right: 30px;
        top: 10px;
        background: var(--bgColor);
        box-shadow: 2px 2px 10px var(--shadow);
        font-size: 13px;

        &.active {
            display: block;
        }
    }

    & label {
        margin-bottom: 18px;
        font-size: 14px;

        &:last-child {
            margin-bottom: 0;
        }
    }

    &__button {
        border: 0;
        background-color: transparent;
        background-image: svg-load("filters-ico.svg"), svg-load("arrow-down-grey.svg");
        background-position:  0 50%, 100% 50%;
        background-repeat: no-repeat, no-repeat;
        background-size: 14px 14px, 11px 9px;
        padding: 0 20px 0 25px;
        font-size: 14px;
        color: var(--textColor);
        cursor: pointer;

        &:focus {
            outline: none;
        }
    }

    & .hrow {
        width: 100%;
        height: 1px;
        background: var(--hrowColor);
        margin: 0;
    }
}
