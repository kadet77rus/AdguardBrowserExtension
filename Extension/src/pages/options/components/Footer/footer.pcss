.footer {
    & > &__rate,
    & > &__nav {
        padding: 32px 32px 40px;
        display: flex;
        justify-content: center;
        align-items: center;

        @media (min-width: 640px) {
            padding: 0 32px;
        }
    }

    &__in {
        display: flex;
        justify-content: space-between;
        height: 100%;
        width: 100%;
        flex-direction: column;
        align-items: flex-start;
        max-width: 100%;

        @media (min-width: 640px) {
            flex-direction: row;
            align-items: center;
            /* sidebar 170px + margin 32px + content 640px */
            max-width: 842px;
        }

        @media (min-width: 1024px){
            /* sidebar 170px + margin 64px + content 640px */
            max-width: 874px;
        }
    }

    &__rate {
        height: 158px;
        background-color: var(--greyf7);

        @media (min-width: 640px) {
            height: 80px;
        }
    }

    &__nav {
        color: var(--white);
        min-height: 140px;
        background-color: var(--gray-base);

        @media (min-width: 640px) {
            min-height: 96px;
        }
    }

    &__nav-in {
        font-size: 16px;
        color: var(--white);
        line-height: 22px;
        display: flex;
        width: 100%;
        justify-content: space-between;

        @media (min-width: 360px) {
            display: block;
            width: auto;
        }
    }

    &__nav-item {
        margin-right: 12px;
        color: inherit;
        opacity: 0.7;
        text-decoration: none;
        transition: var(--t3) opacity;
        @mixin weight-regular;

        @media (min-width: 360px) {
            margin-right: 48px;
        }

        &:hover {
            opacity: 1;
            text-decoration: underline;
        }

        &:last-child {
            margin-right: 0;
        }
    }

    &__copyright {
        display: inline-block;
        vertical-align: middle;
        font-size: 16px;
        color: var(--white);
        line-height: 22px;
        margin-bottom: 24px;

        @media (min-width: 640px) {
            margin: 0;
        }
    }
}
